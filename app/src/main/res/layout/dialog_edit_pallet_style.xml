<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp" android:layout_width="match_parent"
    android:layout_height="800dp">

    <EditText
        android:id="@+id/et_style_code"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:hint="Style Code" />

    <EditText
        android:id="@+id/et_style_color"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:hint="Style Color" />

    <EditText
        android:id="@+id/et_style_size"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:hint="Style Size" />

    <EditText
        android:id="@+id/et_quantity"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:hint="Quantity"
        android:inputType="number" />

    <EditText
        android:id="@+id/et_style_po"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:hint="Style PO"
        android:inputType="number" />

</LinearLayout>